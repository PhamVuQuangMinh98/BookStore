                                </li>
                            }
                            else
                            {
                                var tk = Session["TaiKhoan"] as WebApplication23.Models.KhachHang;

                                <li class="navbar-item">
                                    <a href="~/Account/Index" class="nav-link">Account</a>
                                </li>
                                if (tk.LoaiTK == "Admin")
