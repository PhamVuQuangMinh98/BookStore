
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    var db =new WebApplication23.DAO.KhuyenMaiDAO();
}

<section class="static about-sec">
    <div class="container">
        <h2>Chương Trình Khuyến Mãi</h2>
        <div class="recomended-sec">
            <div class="row">
                @{
                    foreach (var item in db.GetListKM())
                    {
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="item">
                                <img style="width: 230px;height: 250px;display: block;margin-left: auto; margin-right: auto;" src="~/UploadedFiles/@item.HinhKhuyenMai" alt="img">
                                <h3>@item.TenKhuyenMai</h3>
                                <h6><span class="price">Khuyến Mãi @item.PhanTram%</span></h6>
                                <div class="hover">
                                    <a href="~/Discount/ChiTietKhuyenMai/@item.IdKhuyenMai">
                                        <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        </div>
    </section>

